<?xml version="1.0" encoding="gb2312"?>
<!-- 数据库连接池,支持连接多种不同类型数据库 -->
<dbm>
	<logFile>log/db.log</logFile>
	<pool>
		<!-- 连接池名称 -->
		<name>1st</name>
		<!-- 驱动 -->
		<driver>com.mysql.jdbc.Driver</driver>
		<!-- 数据库url -->
		<url>jdbc:mysql://115.28.194.14:3306/demo?autoReconnect=true</url>
		<!-- 用户名 -->
		<user>demo</user>
		<!-- 密码 -->
		<password>demopass</password>
		<!-- 最大链接数 -->
		<maxConn>10</maxConn>
		<!-- 最小链接数 -->
		<minConn>5</minConn>
		<!-- 初始链接数 -->
		<defConn>5</defConn>
	</pool>
</dbm>